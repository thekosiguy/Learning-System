<h2>Webpage Creator</h2>

<form method="get" action="/webpage">
	<p><label for="title">Title Of Webpage: </label><input type="text" name="title" /></p>
	<p><label for="no_of_items">Input Number Of Items: </label><input type="text" id="no_of_items" /></p>
	<input type="submit" onclick="inputItems(); return false;" />
 
	<div id="html_wrapper"></div>

	<script>
		var item_wrapper = document.getElementById("html_wrapper"); 
		var item_data = ""; 

		function item_info(){
			item_data += '<p><label for="name">Name Of Item: </label><input type="text" name="name" /></p>'
			item_data += '<input type="submit" return false;">' 
		}	

		function inputItems(){
			var no_of_items = document.getElementById("no_of_items").value; 

			for (var i = 0; i < no_of_items; i++){
				item_info();
			}
			item_wrapper.innerHTML = item_data;
		}
	</script>
</form>

